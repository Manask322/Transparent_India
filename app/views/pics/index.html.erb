 <div class="container" style="width: 500px; align-content: center;">

  <% unless @docs.blank? %>
    <% @pics.each do |pic| %>
    <a href="<%= (url_for [pic]) %>">
      <ul class="list-group" style="text-align: center; border: border-all; margin: black ;">
        <li class="list-group-item border" style="border-style: solid;"><p class="title"><%= link_to pic.title, pic %></p></li>
        <li class="list-group-item"><p class="date"><%= time_ago_in_words(pic.created_at) %></p></li>      
        <li class="list-group-item"><p class="domain"><%= truncate(pic.domain, length:50) %></p></li>
      </ul>
    </a>
      <% end %>
      <div style="text-align: center;">
